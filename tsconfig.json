{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": [
            "chrome",
            "vite/client"
        ],
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte"
    ],
    "exclude": [
        "node_modules/*"
    ]
}